@model CvSystem.Web.ViewModels.Home.IndexViewModel

@{
    ViewBag.Title = "CvDisplay";
}

<br />
@{ 
    if(Model == null)
    {
        @Html.Partial("_NoCvs")
    }
    else
    {
        @Html.Partial("_CvPersonalInformation", Model.PersonalInfo)
        <hr />
        @Html.Partial("_CvEducation", Model.Education)
        <hr />
        @Html.Partial("_CvCertification", Model.Certificates)
    }
}